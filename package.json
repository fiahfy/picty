{
  "name": "picty",
  "description": "Simple Image Viewer based on Electron",
  "version": "0.6.8",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "@fiahfy/electron-accelerator-formatter": "^0.0.2",
    "@fiahfy/electron-context-menu": "^0.0.2",
    "@fiahfy/worker-promisify": "^0.0.3",
    "@nuxtjs/vuetify": "^0.5.1",
    "electron-devtools-installer": "^2.2.0",
    "electron-window-state": "^5.0.0",
    "file-url": "^2.0.2",
    "material-design-icons-iconfont": "^4.0.2",
    "nuxt": "^2.3.4",
    "typeface-roboto": "^0.0.54",
    "vue-long-press-directive": "^1.0.2",
    "vue-moment": "^4.0.0",
    "vuex-persistedstate": "^2.0.0"
  },
  "devDependencies": {
    "@fiahfy/icns-convert": "^0.0.5",
    "@fiahfy/ico-convert": "^0.0.4",
    "cross-env": "^5.0.5",
    "electron": "^4.0.0",
    "electron-builder": "^20.0.4",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.14.3",
    "sass-loader": "^7.0.1",
    "vuetify-loader": "^1.1.1",
    "worker-loader": "^2.0.0"
  },
  "keywords": [
    "electron",
    "nuxt",
    "vue",
    "vuetify"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Picty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/picty"
  },
  "scripts": {
    "build": "nuxt generate",
    "dev": "cross-env NODE_ENV=development run-p serve electron",
    "electron": "electron main.js",
    "lint": "eslint -f codeframe --ext .js,.vue --ignore-path .gitignore .",
    "package": "electron-builder",
    "release": "run-s build \"package -mw -p onTagOrDraft\"",
    "resources": "run-p resources:*",
    "resources:icns": "icns-convert build/icon.png",
    "resources:ico": "ico-convert build/icon.png",
    "serve": "nuxt",
    "test": "run-s lint"
  }
}
