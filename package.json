{
  "name": "picty",
  "description": "Simple Image Viewer based on Electron",
  "version": "0.7.3",
  "dependencies": {
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@fiahfy/semaphore": "^0.0.2",
    "@fontsource/roboto": "^4.5.5",
    "@mui/icons-material": "^5.6.2",
    "@mui/lab": "^5.0.0-alpha.78",
    "@mui/material": "^5.6.2",
    "date-fns": "^2.28.0",
    "electron-context-menu": "^3.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-window-state": "^5.0.3",
    "file-url": "^4.0.0",
    "next": "^12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-virtualized": "^9.22.3"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-next": "^0.0.16",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/react-virtualized": "^9.21.21",
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "main": "main/index.js",
  "private": true,
  "productName": "Picty",
  "scripts": {
    "build": "npm run build-renderer && npm run build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "lint:prettier": "prettier -c --ignore-path .gitignore .",
    "package": "npm run build && electron-builder",
    "package-dir": "npm run build && electron-builder --dir",
    "prepare": "husky install",
    "release": "npm run build && electron-builder -mlw -p",
    "test": "npm run lint"
  }
}
