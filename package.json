{
  "name": "picty",
  "description": "Simple Image Viewer based on Electron.",
  "version": "0.8.2",
  "dependencies": {
    "@emotion/cache": "^11.10.3",
    "@emotion/react": "^11.10.4",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.4",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.10.3",
    "@mui/lab": "^5.0.0-alpha.99",
    "@mui/material": "^5.10.5",
    "@reduxjs/toolkit": "^1.8.5",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "electron-context-menu": "^3.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-window-state": "^5.0.3",
    "file-url": "^4.0.0",
    "next": "^12.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-virtualized": "^9.22.3",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-next": "^0.0.18",
    "@fiahfy/prettier-config": "^0.0.2",
    "@fiahfy/tsconfig": "^0.0.1",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-redux": "^7.1.24",
    "@types/react-virtualized": "^9.21.21",
    "babel-plugin-import": "^1.13.5",
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "main": "main/index.js",
  "private": true,
  "productName": "Picty",
  "resolutions": {
    "@types/react": "^18.0.20"
  },
  "scripts": {
    "build": "npm run build-renderer && npm run build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "lint:prettier": "prettier -c --ignore-path .gitignore .",
    "package": "npm run build && electron-builder",
    "package-dir": "npm run build && electron-builder --dir",
    "prepare": "husky install",
    "release": "npm run build && electron-builder -mlw -c.snap.publish=github",
    "test": "npm run lint"
  }
}
