{
  "name": "picty",
  "description": "Simple Image Viewer based on Electron.",
  "version": "0.8.2",
  "dependencies": {
    "@emotion/cache": "^11.10.8",
    "@emotion/react": "^11.10.8",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.8",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.11.16",
    "@mui/lab": "^5.0.0-alpha.129",
    "@mui/material": "^5.12.3",
    "@reduxjs/toolkit": "^1.9.5",
    "clsx": "^1.2.1",
    "date-fns": "^2.30.0",
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-window-state": "^5.0.3",
    "file-url": "^4.0.0",
    "next": "^13.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-virtualized": "^9.22.5",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-next": "^0.0.20",
    "@fiahfy/prettier-config": "^0.0.3",
    "@fiahfy/tsconfig": "^0.0.2",
    "@types/node": "^20.1.0",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.2.4",
    "@types/react-redux": "^7.1.25",
    "@types/react-virtualized": "^9.21.21",
    "babel-plugin-import": "^1.13.6",
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "main": "main/index.js",
  "private": true,
  "productName": "Picty",
  "resolutions": {
    "@types/react": "^18.0.20"
  },
  "scripts": {
    "build": "npm run build-renderer && npm run build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "format": "prettier -c --ignore-path .gitignore .",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "package": "npm run build && electron-builder",
    "package-dir": "npm run build && electron-builder --dir",
    "prepare": "husky install",
    "release": "npm run build && electron-builder -mlw -c.snap.publish=github",
    "test": "npm run format && npm run lint"
  }
}
