{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    // Modules
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // Emit
    "noEmit": false,
    "outDir": "../main",
    // JavaScript Support
    "allowJs": true,
    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // Language and Environment
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "target": "esnext",
    // Completeness
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
