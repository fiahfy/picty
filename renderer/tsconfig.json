{
  "extends": "@fiahfy/tsconfig/tsconfig",
  "compilerOptions": {
    // Modules
    "baseUrl": ".",
    "module": "esnext",
    // Emit
    "noEmit": true,
    // JavaScript Support
    "allowJs": true,
    // Interop Constraints
    "isolatedModules": true,
    // Language and Environment
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    // Projects
    "incremental": true,
    // Completeness
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
